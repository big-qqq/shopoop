


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container_sign_in">
  <div class="text-center mb-4">
   
    <h1 class="h3 mb-3 font-weight-normal">Добро пожаловать!</h1>
    <p>Войдите с помощью своего профиля</a></p>
  </div>

  <div class="form-label-group">
   <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:" Логин",class:"form-control" %>
    
  </div><br>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "current-password",placeholder:" Пароль",class:"form-control"%>

  </div>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
   <%= f.submit "Войти",class:"btn btn-lg btn-primary btn-block" %>
   <%= link_to "Зарегистрироваться", new_registration_path(resource_name) %><br />
  <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2019</p>

</div>

<% end %>