
<div class="container4">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
Регистрация
<br>
<br>
        <%= f.email_field :email, autofocus: true,placeholder:" Email",autocomplete: "email",class:"form-control" %><br>
        <%= f.text_field :username,placeholder:" username",class:"form-control" %>
  


     

      <% if User.count==0%>
        <h2>Так как вы первый пользователь вы являетесь админом</h2>
        <%= f.hidden_field :roll , value:"admin" %>
      <%else%>
        <%=f.hidden_field :bill ,value:0 %>
        <%=f.hidden_field :roll ,value:"user" %>
      <%end%>

      
      <div class="field">
       
        <% if @minimum_password_length %>
          <em></em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password",placeholder:" Пароль",class:"form-control" %>
      </div><br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:" Подтверждения пароля ",class:"form-control" %>
      </div>
      <br>
      
      
        <%= f.submit "Зарегистрировать",class: " form-control"%>
      <% end %>

    </div>
      
   