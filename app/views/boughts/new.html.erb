




<%= form_for @bought do |f| %>
<div class="container3">
<div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
                <%=f.text_field :name,value:current_user.username ,class:"form-control"%>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
         </div>

<div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
             <%=f.text_field :last_name ,class:"form-control"%>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>


  <div class="mb-3">
          <label for="username">Username</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">@</span>
            </div>
               <%=f.text_field :username ,class:"form-control"%>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>
        </div>

 <div class="mb-3">
          <label for="email">Email <span class="text-muted">(Optional)</span></label>
           <%=f.text_field :email ,class:"form-control", placeholder:"you@example.com"%>
       
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>


<div class="mb-3">
          <label for="address">Address</label>
           <%=f.text_field :street ,class:"form-control",placeholder:"1234 Main St"%>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

 <div class="mb-3">
          <label for="address2">Telephone <span class="text-muted">(Optional)</span></label>
             <%=f.telephone_field :number_tel,class:"form-control"%>
        </div>

<div class="mb-3">
          <label for="address2">Name on card <span class="text-muted">(Optional)</span></label>
             <%=f.telephone_field :payment,class:"form-control"%>
        </div>

         <div class="mb-3">
          <label for="address2"> <span class="text-muted">(Optional)</span></label>
            <%=f.select  :payment,[['Доставка курьером', 1], ['Самовывоз', 2]]%>
        </div>






<%=f.submit "Заказать ",class:" btn btn-dark"%>

<%  end %>

</div>
<div class="card_bought_left">
  <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Ваша корзина</span>
        <span class="badge badge-secondary badge-pill"><%=@wains.count%></span>
      </h4>
      <ul class="list-group mb-3">
       
      
 <% for wain  in @wains%>
        <li class="list-group-item d-flex justify-content-between">
          <span><%=wain.name%></span>
          <p> <%=Wain.summ_cost_product(wain)%> руб</p>
        </li>
        <%end%>
      </ul>

 </div>
    </div>
